<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSearchBg"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/ll_search_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="曲目读取中......"
            android:textColor="@color/colorSearchTitle"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找到了6个文件夹....."
            android:textColor="@color/colorSearch"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共包含52个曲目....."
            android:textColor="@color/colorSearch"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在读取第2/13个文件夹中的第1/4个文件....."
            android:textColor="@color/colorSearch"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_nothing_contain"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_error"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未发现可播放文件"
            android:textColor="@color/colorSearchTitle"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请退出程序后检查确认目录 cmusic 中的曲目\n文件正确后，重新启动程序。"
            android:textColor="@color/colorSearch"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
</RelativeLayout>